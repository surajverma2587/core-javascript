{
  "name": "core-javascript",
  "version": "1.0.0",
  "description": "Resources containing concepts and challenges for the core JavaScript track",
  "engines": {
    "node": ">=18",
    "yarn": "please use npm",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "check": "jest src/check.test.js",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "jest --verbose --coverage",
    "test:solved": "jest --verbose src/solved/*",
    "test:variables": "jest --verbose --watch --silent src/concepts/01-variables/challenges",
    "test:data-types": "jest --verbose --watch --silent src/concepts/02-data-types/challenges",
    "test:operators": "jest --verbose --watch --silent src/concepts/03-operators/challenges",
    "test:01": "jest --verbose --watch src/challenges/01*",
    "test:02": "jest --verbose --watch src/challenges/02*",
    "test:03": "jest --verbose --watch src/challenges/03*",
    "test:04": "jest --verbose --watch src/challenges/04*",
    "test:05": "jest --verbose --watch src/challenges/05*",
    "test:06": "jest --verbose --watch src/challenges/06*",
    "test:07": "jest --verbose --watch src/challenges/07*",
    "test:08": "jest --verbose --watch src/challenges/08*",
    "test:09": "jest --verbose --watch src/challenges/09*",
    "test:10": "jest --verbose --watch src/challenges/10*"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:code-from-scratch-uk/core-javascript.git"
  },
  "keywords": [],
