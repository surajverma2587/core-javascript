    "@babel/preset-env": "^7.23.3",
    "@types/jest": "^29.5.11",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.2"
  },
  "contributors": [
    {
      "name": "Suraj Verma",
      "email": "surajverma2587@gmail.com"
    }
  ],
